
import java.util.Scanner;

public class Calulator_if_else
{
	

	
	public static void main( String [] args )
	{
		Scanner input = new Scanner( System.in );
	
		int number1;
		int number2;
		int sum;
		int division;
		int multiply;
		int subtract;
		int mod;
	
		
		System.out.print( "enter first integer: ");
		number1 = input.nextInt() ;
	
		System.out.print( "enter second integer: ");
		number2 = input.nextInt() ;
	
		System.out.println("please enter sum, subtract, multiply, or division");
	 	String function = input.next();
		
		switch (function)
		{
		case "sum":
			sum = number1 + number2;
			System.out.printf("the sum is %d", sum);
			break;
		case "subtract":
			subtract = number1 - number2;
			System.out.printf(" the subtraction of the numbers equal %d", subtract);
			break;
		case "multiply":
			multiply = number1 * number2;
			System.out.printf("the product is %d", multiply);
			break;
		case "division":
			division = number1 / number2;
			System.out.printf("the division of the numbers equal %d", division);
			break;
		}

	}
}	
