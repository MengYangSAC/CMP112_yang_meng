
import java.util.Scanner;

public class Calulator_if_else
{
	

	
	public static void main( String [] args )
	{
		Scanner input = new Scanner( System.in );
	
		int number1;
		int number2;
		int sum;
		int division;
		int multiply;
		int subtract;
		int mod;
	
		
		System.out.print( "enter first integer: ");
		number1 = input.nextInt() ;
	
		System.out.print( "enter second integer: ");
		number2 = input.nextInt() ;
	
		System.out.println("please enter +, -, *, or /");
	 	String function = input.next();
		
		if (function.equals("+"))
		{
			sum = number1 + number2;
			System.out.printf( "the sum of them is %d", sum );
		}
		else if (function.equals("-"))
		{
			subtract = number1 - number2;
			System.out.printf(" the sum after suftracting is %d", subtract);
		}
		else if (function.equals("*"))
		{
			multiply = number1 * number2;
			System.out.printf("the product is %d", multiply);
		}
		else if (function.equals("/"))
		{
			division = number1 / number2;
			System.out.printf(" the remainder is %d", division);
		}

	}
}
